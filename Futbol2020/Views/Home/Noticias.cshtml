    <div class="inner-page-banner">
        <div class="container">
        </div>
    </div>
    <div class="inner-information-text">
        <div class="container">
            <h3>Ultimas Noticias</h3>
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
                <li class="active">Noticias</li>
            </ul>
        </div>
    </div>
