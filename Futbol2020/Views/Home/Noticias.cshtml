                    @if (Model != null)
                    {
                        @foreach (var elemento in Model)
                    {

                        <div class="col-lg-6 col-sm-6 col-xs-12">
                            <div class="news-post-widget">
                                @if (elemento.FotoUrl != null)
                                {
                                    <img class="img-responsive" src="@Url.Content("~/images/"+elemento.FotoUrl)" alt="@elemento.Titulo">
                                }
                                else
                                {
                                    <img class="img-responsive" src="@Url.Content("~/images/noticias_default.jpg")" alt="Noticias">
                                }                                
                                <div class="news-post-detail">
                                    <span class="date">@elemento.Fecha.ToString("dddd d MMMM yyyy");</span>
                                    <h2 style="overflow:hidden; white-space:nowrap;text-overflow:ellipsis; word-wrap:break-word;"><a href="@Url.Action("VerNoticia","Home", new { Id = elemento.Id})" >@elemento.Titulo</a></h2>
                                    <p style="overflow:hidden; white-space:nowrap;text-overflow:ellipsis; word-wrap:break-word;">@elemento.TextoCorto</p>
                                </div>
                            </div>
                        </div>
                    }
                    }
                    else
                    {
                        <div class="col-lg-6 col-sm-6 col-xs-12">
                            <h1>No hay noticias</h1>
