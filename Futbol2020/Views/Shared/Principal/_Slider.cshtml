@using Microsoft.AspNetCore.Html
@{
    //DateTime fecha2 = DateTime.Now;
    string cadena = ViewBag.Noticias;
    string result = cadena.Remove(cadena.Length - 1, 1);
    int index = 0;

}


<div class="full-slider">
    <div id="carousel-example-generic" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @foreach (var elemento in ViewBag.Slider)
            {
                string sl = Convert.ToString(index);
            <li data-target="#carousel-example-generic" data-slide-to="@sl" class="@elemento.Clase"></li>
                index++;
            }
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <!-- First slide -->
            @foreach (var elemento in ViewBag.Slider)
            {
                HtmlString msg = new HtmlString(elemento.Titulo);
                HtmlString msg2 = new HtmlString(elemento.Descripcion);
            <div class="item @elemento.Clase" style="background-image: url(@Url.Content("~/images/slider/"+ elemento.FotoUrl)" data-ride="carousel" data-interval="5000">
                <div class="carousel-caption">
                    <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12"></div>
                    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                        <div class="slider-contant" data-animation="animated fadeInRight">
                            <h3>@msg</h3>
                            <p>
                                @msg2
                            </p>
                            @if (elemento.Id_Titular != 0)
                                {
                            <a href="@Url.Action("VerNoticia","Home", new { Id = elemento.Id_Titular})" class="btn btn-primary btn-lg" style="height: !important;">Leer Mas...</a>
                                }
                                else
                                {
                                }

                            <!--  <button class="btn btn-primary btn-lg">Read More</button> -->
                        </div>
                    </div>
                </div>
            </div>
            }
            <!-- /.item -->
        </div>
        <!-- /.carousel-inner -->
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- /.carousel -->
    <div class="news">
        <div class="container">
            <div class="heading-slider">
                <p class="headline"><i class="fa fa-star" aria-hidden="true"></i> Noticias :</p>
                <!--made by vipul mirajkar thevipulm.appspot.com-->
                <h1>
                    <a href="@Url.Action("Noticias","Home")" class="typewrite" data-period="2000" data-type='[ @result]'>
                        <span class="wrap"></span>
                    </a>
                </h1>
                <a>
                    <span class="wrap"></span>
                </a>
            </div>
        </div>
    </div>
</div>